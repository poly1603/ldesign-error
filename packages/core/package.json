{
  "name": "@ldesign/error-core",
  "version": "1.0.0",
  "description": "LDesign 错误处理核心库 - 框架无关的错误捕获和上报",
  "author": "ldesign",
  "license": "MIT",
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./esm/index.d.ts",
      "import": "./esm/index.js",
      "require": "./lib/index.cjs",
      "default": "./esm/index.js"
    },
    "./catcher": {
      "types": "./esm/catcher/index.d.ts",
      "import": "./esm/catcher/index.js",
      "require": "./lib/catcher/index.cjs",
      "default": "./esm/catcher/index.js"
    },
    "./catcher/*": {
      "types": "./esm/catcher/*.d.ts",
      "import": "./esm/catcher/*.js",
      "require": "./lib/catcher/*.cjs",
      "default": "./esm/catcher/*.js"
    },
    "./reporter": {
      "types": "./esm/reporter/index.d.ts",
      "import": "./esm/reporter/index.js",
      "require": "./lib/reporter/index.cjs",
      "default": "./esm/reporter/index.js"
    },
    "./reporter/*": {
      "types": "./esm/reporter/*.d.ts",
      "import": "./esm/reporter/*.js",
      "require": "./lib/reporter/*.cjs",
      "default": "./esm/reporter/*.js"
    },
    "./types": {
      "types": "./esm/types/index.d.ts",
      "import": "./esm/types/index.js",
      "require": "./lib/types/index.cjs",
      "default": "./esm/types/index.js"
    },
    "./types/*": {
      "types": "./esm/types/*.d.ts",
      "import": "./esm/types/*.js",
      "require": "./lib/types/*.cjs",
      "default": "./esm/types/*.js"
    },
    "./package.json": "./package.json"
  },
  "main": "./lib/index.cjs",
  "module": "./esm/index.js",
  "types": "./esm/index.d.ts",
  "unpkg": "./dist/index.min.js",
  "jsdelivr": "./dist/index.min.js",
  "files": [
    "README.md",
    "LICENSE",
    "CHANGELOG.md",
    "esm",
    "lib",
    "dist"
  ],
  "scripts": {
    "build": "ldesign-builder build",
    "dev": "tsc --watch",
    "type-check": "tsc --noEmit",
    "clean": "node -e \"const fs=require('fs'); ['es','lib','dist','.tsbuildinfo'].forEach(d=>{try{fs.rmSync(d,{recursive:true,force:true})}catch{}})\""
  },
  "dependencies": {
    "@ldesign/shared": "workspace:*"
  },
  "devDependencies": {
    "@ldesign/builder": "workspace:*",
    "@types/node": "^22.0.0",
    "typescript": "^5.7.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "typings": "./esm/index.d.ts",
  "browser": "./dist/index.js"
}